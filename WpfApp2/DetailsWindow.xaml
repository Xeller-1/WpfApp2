<Window x:Class="WpfApp2.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Детали части" Height="500" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Количество компаний:" FontSize="16" Margin="10"/>
            <TextBlock x:Name="CompanyCountText" FontSize="16" Margin="10"/>

            <TextBlock Text="Количество техники:" FontSize="16" Margin="10"/>
            <TextBlock x:Name="EquipmentCountText" FontSize="16" Margin="10"/>

            <TextBlock Text="Количество оружия:" FontSize="16" Margin="10"/>
            <TextBlock x:Name="WeaponCountText" FontSize="16" Margin="10"/>

            <Button Content="Редактировать" FontSize="16" Margin="10" Click="EditButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
