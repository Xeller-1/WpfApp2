<Window x:Class="WpfApp2.EditUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="EditUnitWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Номер части" />
            <TextBox Text="{Binding Unit_Number}" />
            
            <TextBlock Text="Страна" />
            <TextBox Text="{Binding Location.Country}" />

            <TextBlock Text="Город" />
            <TextBox Text="{Binding Location.City}" />

            <TextBlock Text="Адрес" />
            <TextBox Text="{Binding Location.Address}" />

            <TextBlock Text="Количество рот" />
            <TextBox Text="{Binding Company_Count}" />

            <TextBlock Text="Количество оборудования" />
            <TextBox Text="{Binding Equipment_Count}" />

            <TextBlock Text="Количество оружия" />
            <TextBox Text="{Binding Weapon_Count}" />

            <!-- Кнопка для сохранения изменений -->
            <Button Content="Сохранить" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
